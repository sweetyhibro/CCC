#include <stdio.h>

int findLastSurvivor(int n) {
    int soldiers[n];
    for (int i = 0; i < n; i++) soldiers[i] = i + 1;
    
    int alive = n, killIndex = 0;

    while (alive > 1) {
        int nextKill = (killIndex + 1) % alive;
        for (int i = nextKill; i < alive - 1; i++) soldiers[i] = soldiers[i + 1];
        alive--;
        killIndex = nextKill % alive;
    }

    return soldiers[0];
}

int main() {
    int n;
    printf("Enter the number of soldiers: ");
    scanf("%d", &n);

    int lastSurvivor = findLastSurvivor(n);
    printf("The last surviving soldier is at position: %d\n", lastSurvivor);

    return 0;
}
